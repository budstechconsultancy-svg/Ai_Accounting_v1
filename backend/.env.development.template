# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# 
# This is for LOCAL DEVELOPMENT ONLY
# DO NOT use these settings in production
# 
# Instructions:
# 1. Copy this file to `.env` in the backend directory
# 2. Update values as needed for your local setup
# ============================================================================

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Development secret (DO NOT use in production)
DJANGO_SECRET=dev-secret-key-replace-in-production

# Enable debug mode (ONLY for development)
DJANGO_DEBUG=True

# Allow all hosts in development
ALLOWED_HOSTS=*

# ============================================================================
# DATABASE CONFIGURATION (Local MySQL)
# ============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_accounting
DB_USER=root
DB_PASSWORD=your_local_mysql_password

# Connection pool settings
DB_CONN_MAX_AGE=0  # No connection pooling in dev

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# Development JWT secret (DO NOT use in production)
JWT_SECRET=dev-jwt-secret-replace-in-production

# ============================================================================
# REDIS CONFIGURATION (Local Redis)
# ============================================================================

REDIS_URL=redis://127.0.0.1:6379/0

# ============================================================================
# EXTERNAL API KEYS (Optional for development)
# ============================================================================

# Google Gemini AI (use your own API key)
GEMINI_API_KEY=your_gemini_api_key_here

# Twilio SMS (optional - will use mock SMS if not configured)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
