# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# CRITICAL: Generate a new secret key for production
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET=REPLACE_WITH_STRONG_SECRET_KEY_50_PLUS_CHARACTERS

# CRITICAL: Set to False in production
DJANGO_DEBUG=False

# Production domains (comma-separated, no spaces)
ALLOWED_HOSTS=finpixe.com,www.finpixe.com,api.finpixe.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MySQL/ProxySQL Connection
DB_HOST=proxysql-cluster.finpixe.internal  # Replace with your ProxySQL endpoint
DB_PORT=6033
DB_NAME=finpixe_production
DB_USER=finpixe_app_user
DB_PASSWORD=REPLACE_WITH_STRONG_DATABASE_PASSWORD

# Connection pool settings
DB_CONN_MAX_AGE=600  # 10 minutes

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# CRITICAL: Generate a new JWT secret for production
# Use: python -c 'import secrets; print(secrets.token_hex(32))'
JWT_SECRET=REPLACE_WITH_STRONG_JWT_SECRET_64_CHARACTERS

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Cluster endpoint (for caching and RQ)
REDIS_URL=redis://redis-cluster.finpixe.internal:6379/0

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================

# Google Gemini AI
GEMINI_API_KEY=REPLACE_WITH_YOUR_GEMINI_API_KEY

# Twilio SMS (for OTP)
TWILIO_ACCOUNT_SID=REPLACE_WITH_YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=REPLACE_WITH_YOUR_TWILIO_PHONE_NUMBER

# ============================================================================
# OPTIONAL: MONITORING & LOGGING
# ============================================================================

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AWS CloudWatch (if using AWS)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

